<!-- app/views/goals/new.html.erb -->

<div class="container">
  <div class="page-conteiner">

    <header>
      <div class="top-camera-gap"> </div>
      <div class="content-center">
        <span class="header-label">New mountain</span>
        <span class="vertical-menu-btn" onClick="menuOption();">

          <!-- Dropdown content -->
          <div id="login_dropdown_content">
            <ul>
              <li>
                <div class="content-left mt-2">
                  <div class="img-contact-us"></div>
                  <span>Contact with us</span>
                </div>
              </li>
              <li>
                <div class="content-left mt-2">
                  <div class="img-faq"></div>
                  <span>FAQ</span>
                </div>
              </li>
              <li>
                <div class="content-left mt-2">
                  <%= form_with url: destroy_user_session_path, method: :delete, local: true do %>
                    <%= submit_tag 'Logout', class: 'btn btn-link', style: 'padding: 0; color: inherit; text-decoration: none;' %>
                  <% end %>
                </div>
              </li>

            </ul>
          </div>

        </span>
      </div>
      <div class="footer-img-box content-center">
        <div class="new-mountain-img"></div>
      </div>
    </header>

    <section>
      <%= form_with(model: @goal, local: true) do |form| %>
      <% if @goal.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@goal.errors.count, "error") %> prohibited this goal from being saved:</h2>
          <ul>
          <% @goal.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <!-- First input block -->
      <div class="section-content">
        <div class="selection-content-box">

          <!-- Goal name -->
          <div class="field">
            <%= form.label :name %>
            <%= form.text_field :name %>
          </div>

          <!-- Goal start date -->
          <div class="field">
            <%= form.label :start_date %>
            <%= form.date_field :start_date %>
          </div>

          <!-- Goal end date -->
          <div class="field">
            <%= form.label :deadline %>
            <%= form.date_field :deadline %>
          </div>

        </div>
      </div>
    </section>

    <section>
      <!-- Second input block -->
      <div class="section-content">
        <div class="selection-content-box">
          <%= form.fields_for :tasks do |task_form| %>


          <!-- Goal task name -->
          <!--
          <div class="field">
            <%= task_form.label :name %>
            <%= task_form.text_field :name %>
          </div>
          -->

          <!-- Goal task deadline and add button -->

          <div class="field">
            <!-- <%= task_form.label :deadline %> -->
            <div class="two-elements">
              <!-- <%= task_form.date_field :deadline %> -->
              <span></span>
              <button type="button" style="margin-bottom: 8px; color: #fff; font-weight: bold;" onClick="addTask();">Add task</button>
            </div>
          </div>


          <!-- list of tasks for this goal -->
          <div id="tasks-list">
            <div class="box-underline" id="task_nr1">
                <div class="two-elements">
                  <input type="date" id="nm1_deadline" name="deadline" class="new-mountain-input">
                  <input type="text" id="nm1_time_left" name="time_left" value="1d 23h 12m" class="time-left-field" readonly>
                </div>

                <div class="two-elements">
                  <input type="text" id="nm1_name" class="new-mountain-input" name="task_name" placeholder="Task name">
                  <span class="del-task" onClick="deleteTask(1);">Delete</span>
                </div>
            </div>
          </div>
          <!--------------------------------->

          <% end %>
        </div>
      </div>
    </section>
    </div>

    <footer>
      <div class="footer-btn">
        <div class="actions">
          <!-- <input type="submit" name="commit" value="Create Goal" data-disable-with="Create Goal"> -->
          <%= form.submit %>
        </div>
        <div>
          <button style="background-color: #3D444C !important;"> <a href="/goals">Cancel</a> </button>
        </div>
      </div>
    </footer>

      <% end %>
  </div>

