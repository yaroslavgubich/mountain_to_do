<div class="container" data-controller="tasks">
  <div class="page-container">

    <header>
      <div class="top-camera-gap"></div>
      <div class="content-center">
        <span class="header-label">New mountain</span>
        <span class="vertical-menu-btn" onClick="menuOption();">

          <!-- Dropdown content -->
          <div id="login_dropdown_content">
            <ul>
              <li>
                <div class="content-left mt-2">
                  <div class="img-contact-us"></div>
                  <span>Contact with us</span>
                </div>
              </li>
              <li>
                <div class="content-left mt-2">
                  <div class="img-faq"></div>
                  <span>FAQ</span>
                </div>
              </li>
              <li>
                <div class="content-left mt-2">
                  <%= form_with url: destroy_user_session_path, method: :delete, local: true do %>
                    <%= submit_tag 'Logout', class: 'btn btn-link', style: 'padding: 0; color: inherit; text-decoration: none;' %>
                  <% end %>
                </div>
              </li>
            </ul>
          </div>

        </span>
      </div>
      <div class="footer-img-box content-center">
        <div class="new-mountain-img"></div>
      </div>
    </header>

    <%= form_with(model: @goal, local: true) do |form| %>
      <% if @goal.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@goal.errors.count, "error") %> prohibited this goal from being saved:</h2>
          <ul>
            <% @goal.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <section>
        <!-- First input block -->
        <div class="section-content">
          <div class="selection-content-box">
            <!-- Goal name -->
            <div class="field">
              <%= form.label :name %>
              <%= form.text_field :name %>
            </div>
            <!-- Goal start date -->
            <div class="field">
              <%= form.label :start_date %>
              <%= form.date_field :start_date %>
            </div>
            <!-- Goal end date -->
            <div class="field">
              <%= form.label :deadline %>
              <%= form.date_field :deadline %>
            </div>
          </div>
        </div>
      </section>

      <section>
        <!-- Second input block -->
        <div class="section-content">
          <div class="selection-content-box">
            <%= form.fields_for :tasks do |task_form| %>
              <!-- This section is hidden and only serves to allow the form_with helper to properly generate nested attributes for tasks -->
            <% end %>

            <!-- Goal task deadline and add button -->
            <div class="field">
              <div class="two-elements">
                <span></span>
                <button type="button" style="margin-bottom: 8px; color: #fff; font-weight: bold;" data-action="click->tasks#addTask">Add task</button>
              </div>
            </div>

            <!-- List of tasks for this goal -->
            <div id="tasks-list" data-target="tasks.tasksList">
              <div class="box-underline task-field" id="task_nr0">
                <div class="two-elements">
                  <input type="date" name="goal[tasks_attributes][0][deadline]" id="nm0_deadline" class="new-mountain-input">
                  <input type="text" name="goal[tasks_attributes][0][time_left]" id="nm0_time_left" value="" class="time-left-field" readonly>
                </div>
                <div class="two-elements">
                  <input type="text" name="goal[tasks_attributes][0][name]" id="nm0_name" class="new-mountain-input" placeholder="Task name">
                  <span class="del-task" data-action="click->tasks#removeTask">Delete</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>

      <footer>
        <div class="footer-btn">
          <div class="actions">
            <%= form.submit "Create Goal", id: "create_goal_btn", data: { action: "tasks#newTaskCounterReset" } %>
          </div>
          <div>
            <button style="background-color: #3D444C !important;">
              <a href="/goals" style="color: #fff; text-decoration: none;">Cancel</a>
            </button>
          </div>
        </div>
      </footer>
    <% end %>
  </div>

  <!-- Task template for Stimulus -->
  <template id="task-template" data-target="tasks.taskTemplate">
    <div class="box-underline task-field" id="task_nrTEMPLATE_INDEX">
      <div class="two-elements">
        <input type="date" name="goal[tasks_attributes][TEMPLATE_INDEX][deadline]" class="new-mountain-input" id="nmTEMPLATE_INDEX_deadline">
        <input type="text" name="goal[tasks_attributes][TEMPLATE_INDEX][time_left]" class="time-left-field" id="nmTEMPLATE_INDEX_time_left" readonly>
      </div>
      <div class="two-elements">
        <input type="text" name="goal[tasks_attributes][TEMPLATE_INDEX][name]" class="new-mountain-input" id="nmTEMPLATE_INDEX_name" placeholder="Task name">
        <span class="del-task" data-action="click->tasks#removeTask">Delete</span>
      </div>
    </div>
  </template>
</div>
