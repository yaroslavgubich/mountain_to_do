<div class="container">
  <div class="page-conteiner">

    <header>
      <div class="top-camera-gap"> </div>
      <div class="content-center">
        <span class="header-label">Sign up</span>
        <span class="vertical-menu-btn" onClick="menuOption();">

          <!-- Dropdown content -->
          <div id="login_dropdown_content">
            <ul>
              <li>
                <div class="content-left mt-2">
                  <div class="img-forgot-password"></div>
                  <a href="/users/password/new">Forgot password</a>
                </div>
              </li>
              <li>
                <div class="content-left mt-2">
                  <div class="img-contact-us"></div>
                  <span>Contact with us</span>
                </div>
              </li>
              <li>
                <div class="content-left mt-2">
                  <div class="img-faq"></div>
                  <span>FAQ</span>
                </div>
              </li>
            </ul>
          </div>

        </span>
      </div>
      <div class="footer-img-box content-center">
        <div class="sign-up-img"></div>
      </div>
    </header>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="mt-3" style="height: 100vh">
        <!-- User name field -->
        <div>
          <div>
            <label class="custom-form-label requared" for="user_username">User name <abbr title="required">*</abbr></label>
          </div>
          <div>
            <input class="custom-form-field" autocomplete="username" autofocus="autofocus" required="required" aria-required="true" type="text" name="user[username]" id="user_username">
          </div>
        </div>

        <!-- User Email -->
        <div>
          <div>
            <label class="custom-form-label" for="user_email">Email <abbr title="required">*</abbr></label>
          </div>
          <div>
            <input class="custom-form-field required" autocomplete="email" autofocus="autofocus" required="required" aria-required="true" type="email" value="" name="user[email]" id="user_email">
          </div>
        </div>

        <!-- Password -->
        <div>
          <div>
            <label class="custom-form-label password required" for="user_password">Password <abbr title="required">*</abbr></label>
          </div>
          <div>
            <input class="custom-form-field password required" autocomplete="new-password" required="required" aria-required="true" type="password" name="user[password]" id="user_password">
          </div>
        </div>

        <!-- Repeat Password-->
        <div>
          <div>
            <label class="custom-form-label password required" for="user_password_confirmation">Password confirmation <abbr title="required">*</abbr></label>
          </div>
          <div>
            <input class="custom-form-field password required" autocomplete="new-password" required="required" aria-required="true" type="password" name="user[password_confirmation]" id="user_password_confirmation">
          </div>
        </div>

      <%= f.error_notification %>



      <div class="space-top-6rem">
        <!-- Login button -->
        <div class="content-center btn-space-arround form-actions">
          <input type="submit" name="commit" value="Sign up" class="cstm-btn green-btn" >
        </div>

        <!-- Sign up button -->
        <div class="content-center btn-space-arround">
          <a href="/users/sign_in" class="cstm-btn gray-btn">Cancel</a>
        </div>
      </div>

      </div>


    <% end %>

      </div>

      <!--
      <%= render "devise/shared/links" %>
      -->
</div>
